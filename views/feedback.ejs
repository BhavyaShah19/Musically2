    <div class="mainform">
        <h1>FeedBack</h1>
        <p>We would love to hear your thoughts, suggestions, concerns or problems with anything so we can improve!</p>
        <form action="/feedback" method="post" id="form">
            <div class="formradio">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
                    <label class="form-check-label" for="flexRadioDefault1">
                        Comments
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Suggestions
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Questions
                    </label>
                </div>
            </div>
            <div class="formfill">
                <div class="row">
                    <div class="col">
                        <span> First Name:</span>
                        <input type="text" class="form-control" name='firstnamefeed' placeholder="First name"
                            aria-label="First name" required>
                    </div>
                    <div class="col">
                        <span> Last Name:</span>
                        <input type="text" class="form-control" name='lastnamefeed' placeholder="Last name"
                            aria-label="Last name" required>
                    </div>
                </div>
                <div class="row" style="margin-top: 3%;">
                    <div class="col">
                        <span> Email:</span>
                        <input type="email" class="form-control" name='feedmail' placeholder="Email" aria-label="Email"
                            required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="comment">Describe your FeedBack:</label>
                    <textarea class="form-control" name="feedmessage" rows="5" cols="30" id="comment" required
                        placeholder="I want to buy guitar number 1."></textarea>
                </div>
                <button type="submit" class="btn btn-outline-success btn-lg">Submit FeedBack</button>
            </div>
        </form>
    </div>


    <div class="modal" id="myModal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
